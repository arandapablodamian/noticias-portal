{% extends 'FrontendBundle:Chacotv:frontend.html.twig' %}
{% block stylesheets %}
    {{parent()}}
    <style>
       .videoYoutube iframe{
              width: 100%;
              height: 250px;
            }
    </style>
{% endblock %}
{% block content %}
  


  <div id="wrapper"  style="max-width:1200px;margin-left:auto; margin-right:auto;">
   
    <div style="background-color:#3c3c3c;color:white;max-width:1200px;margin-left:auto;margin-right:auto; min-height:50px;margin-top:50px; margin-bottom:50px;padding-top:5px;"> 
        <div style="font-size: 20px;" >
          <strong>&nbsp&nbspVIDEOS</strong>
        </div>
    </div>
   
  
  
          {# table body #}
          {% for video in pagination %}
                <div class="row" style="max-width:1200px; background-color:#e3e3e3;margin-left:auto;margin-right:auto;">
                  <div class="col-md-6">
                    
                        <div class="videoYoutube" style="max-height:350px;max-width:350px;">
                                  {{video.urlVideo | raw }}
                        </div>
                     
                  </div>
                  <div class="col-md-6">
                     <div >
                        {{video.fechaCreacion| date('d/m/Y')}}
                        <br>
                        <br>
                      </div>
                      <div>
                      <strong>
                        
                           <strong> <h3>{{video.titulo|raw}}</h3></strong>
                           <br><br>
                        
                      </strong>
                    </div>
                    <div>
                        {{video.desarrollo|raw}}
                    </div>
                   </div>
                </div>
                <br>
            
      
          {% endfor %}
         
          {# display navigation #}
              {{ knp_pagination_render(pagination) }}
      </div>
  </div>
  <br><br>
    
{% endblock %}
