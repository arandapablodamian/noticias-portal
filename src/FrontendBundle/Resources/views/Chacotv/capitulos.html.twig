{% extends 'FrontendBundle:Chacotv:frontend.html.twig' %}
{% block stylesheets %}
    {{parent()}}
    <style>
            .banner{
               color:white;
               text-decoration:none;
            }
            .banner:hover{
               color:white;
               text-decoration:none;
            }
            .banner:link {
                color:white;
               text-decoration:none;
            }
            .carrouselYoutube iframe{
              margin-right: auto;
              margin-left:auto;
              height: 300px;
            }

             .videoYoutube iframe{
              width: 100%;
              height: 200px;
            }


            .contenidoListaVideo{
             margin-left:10px;margin-bottom:auto;margin-top:80px;
            }

            .listaVideos{
              position: absolute; right:25px; top: 0px;background-color:#271e1f;width:30%;height:200px; opacity: 0.5; filter: alpha(opacity=50); color:white;
            }
            .listaVideos:hover{
              background-color: white;color:black;
            }

            .marco {
                 position: absolute; right:25px; top: 0px;background-color:#271e1f;width:87%;height:200px; opacity: 0.1; filter: alpha(opacity=10); color:white;
            }
            }

    </style>

    <link rel="stylesheet" href="{{asset('assets/frontend/css/owl.carousel.min.css')}}">
    <link rel="stylesheet" href="{{asset('assets/frontend/css/owl.theme.default.min.css')}}">

{% endblock %}
{% block content %}
   
  <br>
  <br>
   <div id=="wrapper"   style="width:80%;margin-left:auto; margin-right:auto;min-height:500px;">
     <div style="background-color:#3c3c3c;color:white;width:100%;margin-left:auto;margin-right:auto; min-height:50px;margin-top:50px; margin-bottom:50px;padding-top:5px;">
        <div style="font-size: 20px;" >
          <strong>&nbsp&nbspCAPÍTULOS</strong>
        </div>
    </div>
    {% set cantidadCap = 0 %}
    <div class="row">
      {% for programa in programas %}
        {% if not programa.capitulos is empty %}
            <div class="col-md-4">
              {% set cantidadCapitulos = programa.capitulos|length  %}
              <a href="{{path('mostrarCapitulos',{'id':programa.id})}}">
                <div  style="max-height:300px;margin-left:10px;margin-right:10px;background-color:#d7d7d7;display:block;">
                        <div  class="videoYoutube" style="height:0px;max-width:100%;">
                                       {{programa.capitulos[0].video|raw}}
                          <div class="marco">
                          </div>
                          <div  class="listaVideos" >
                            <div class="contenidoListaVideo">
                              <strong>Ver capítulos</strong>
                              <br>
                                <div style="text-align:center;">{{cantidadCapitulos}}</div>
                                <div style="width:40px; margin-left:auto;margin-right:auto;">
                                  <img class="img-fluid" style="height:30px;" src="{{asset('assets/frontend/images/playlist_icon.png')}}" alt="">
                                </div>
                            </div>
                          </div>

                        </div>
                      </div>
                      <br>
                      <div style="margin-left:15px;margin-top:210px; display:block;" >
                        <h4>{{programa.titulo}}</h4>
                      </div>
             </a>
            </div>
            <br><br>
        {% endif %}
      {% endfor %}
    </div>

</div>
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script  src="{{asset('assets/frontend/js/owl.carousel.js')}}"></script>
    <script>
    $('.owl-carousel').owlCarousel({
        items:3,
        merge:true,
        loop:true,
        margin:15,
        video:true,
        lazyLoad:true,
        center:true,
        responsive:{
            480:{
                items:2
            },
            600:{
                items:2
            }
        }
    })


    </script>
{% endblock %}
