{% extends 'FrontendBundle:Chacotv:frontend.html.twig' %}
{% block stylesheets %}
    {{parent()}}
    <style>
            .banner{
               color:white;
               text-decoration:none;
            }
            .banner :hover{
               color:white;
               text-decoration:none;
            }
            .banner:link {
                color:white;
               text-decoration:none;
            }
            .carrouselYoutube iframe{
              margin-right: auto;
              margin-left:auto;
              height: 300px;
            }

             .videoYoutube iframe{
              width: 100%;
              max-height:350px;
            }


            .contenidoListaVideo{
             margin-left:10px;margin-bottom:auto;margin-top:80px;
            }

            .marcoLista{
              background-color: #3c3c3c; color: white;
            }
            .lineaCapitulo{

              min-height:50px;
              padding-left: 15px;
            }
            .lineaCapitulo:hover{
              background-color:#e4e4e4 ;color:black;
            }

    </style>

    <link rel="stylesheet" href="{{asset('assets/frontend/css/owl.carousel.min.css')}}">
    <link rel="stylesheet" href="{{asset('assets/frontend/css/owl.theme.default.min.css')}}">

{% endblock %}
{% block content %}
    <div id="encabezado" style="display:none; background-color:#51b072;color:white;">
    <br>
      <div class="row" style="max-width:1000px; margin-left:auto; margin-right:auto;margin-top:5%;">
        <div class="col-md-4">
            <h3>Capitulos en HD</h3>
            <div><h4>Todos los cap√≠tulos en un solo lugar</h4></div>
        </div>
        <div class="col-md-4">
           <img  style="max-width:100%;height:auto; margin-right:auto;margin-left:auto;"src="{{asset('assets/frontend/images/capitulos.jpg')}}" alt="Nature" >
        </div>

      </div>
      <br>

  </div>
  <br>
  <br>
  <br>
  <br>
   <div id=="wrapper"   style="max-width:1200px;margin-left:auto; margin-right:auto;min-height:700px;">
     <div style="background-color:#3c3c3c;color:white;max-width:1200px;margin-left:auto;margin-right:auto; min-height:50px;margin-top:50px; margin-bottom:50px;padding-top:5px;">
        <div style="font-size: 20px;" >
          <strong>&nbsp&nbsp {{programa.titulo}} - CHACO TV</strong>
        </div>
    </div>
    {% if not capitulos is empty %}
      <div class="row">
        <div class="col-md-8 " style="padding:right:0px;;display:block;height:310px;">
          <div  style="max-height:350px;background-color:#d7d7d7;display:block;display:block;">
              <div  class="videoYoutube" id="videoYoutube" style="height:0px;max-width:100%;">
                {{programa.capitulos[0].video|raw}}
              </div>
          </div>
        </div>
        <div class="col-md-4" style="padding-left:0px;">
          <div class="marcoLista" style="margin-left:auto;width:100%;height:320px;overflow: auto;">
             <div style="height:60px;background-color:#1d1a1a;color:white;">
                 <div style="width:40px; margin-left:auto;margin-right:auto;display:inline;">
                    <img class="img-fluid" style="height:30px;" src="{{asset('assets/frontend/images/playlist_icon.png')}}" alt="">
                  </div>
                  <div style="display:inline;">
                    &nbsp&nbsp{{programa.titulo}} - CHACO TV
                    <br>
                    <strong>&nbsp&nbsp &nbsp&nbsp &nbsp&nbsp &nbsp&nbspLista de Episodios:</strong>
                    <br>
                  </div>
                </div>
            {% for capitulo in capitulos %}
                <div class="lineaCapitulo" id="{{capitulo.id}}-capitulo" video="{{capitulo.video}}" onclick="cambiarVideo('{{capitulo.id}}-capitulo')" >&nbsp&nbsp{{capitulo.nroCapitulo~'-'~capitulo.titulo}} <hr></div>


            {% endfor %}
          </div>
        </div>
      </div>
    {% endif %}
    </div>



</div>
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script>

        function  cambiarVideo(capitulo){
          console.log($('#'+capitulo).attr('video'));
          $("#videoYoutube").html($('#'+capitulo).attr('video'));
        }


    </script>
{% endblock %}
