{% extends 'FrontendBundle:Chacotv:frontend.html.twig' %}

{% block content %}

  <div id="wrapper" style="min-height:800px;max-width:80%;margin-left:auto; margin-right:auto;">
    <div style="background-color:#3c3c3c;color:white;width:100%;margin-left:auto;margin-right:auto; min-height:50px;margin-top:50px; margin-bottom:50px;padding-top:5px;">
        <div style="font-size: 20px;" >
          <strong>&nbsp&nbspCONTACTO</strong>
        </div>
    </div>
      <div class="row">
        <div class="col-md-4" >
          <div class="shadow p-2" > Dirección</div><br> 
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2105.265950079804!2d-58.98709051470238!3d-27.4499142570278!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94450d51b23ebdc9%3A0x9b929fa022f94d87!2schaco+tv!5e0!3m2!1ses-419!2sar!4v1553277369493" style="width:100%" frameborder="0" style="border:0" allowfullscreen></iframe>
        <div>
            <strong>Dirección: </strong> Mitre, Marcelo T. de Alvear &, H3500 Resistencia, Chaco <br><br>
          </div>
          <br>
          <div class="shadow p-2"> Contacto</div><br>
        <div>
          <div>
                Horarios de Atención:
               <br>
                <strong>LUNES A VIERNES: </strong> De 06.00 hs a 21.00 hs. <br>
                <strong>SABADOS :</strong>  De 08.00 hs. a 13.00 hs. <br>
                <strong>Teléfono:</strong>  362 4419300 Int. 5207/8 <br>
                <strong>Email:</strong> chacotvlista@ecom.com.ar <br>
              </div>
            </div>
        </div>
        <div class="col-md-8" >
          <div><strong><h4>Contactanos por intenet</h4></strong></div>
            <div>
               {{ form_start(form,{ 'attr': {'style': 'margin-right: 20%;'}}) }}
                      <div class="row">
                           <div class="col-md-4">
                              {{ form_label(form.nomyap,'Nombre y Apellido') }}
                              {{ form_errors(form.nomyap) }} <br>
                              {{ form_widget(form.nomyap,{ 'attr': {'class': 'col-md-12'}}) }} <br>
                          </div>
                          <div  class="col-md-4">
                              {{ form_label(form.telefono) }}
                              {{ form_errors(form.telefono) }} <br>
                              {{ form_widget(form.telefono,{ 'attr': {'class': 'col-md-12'}}) }} <br>
                          </div>
                          <div class="col-md-12">
                              {{ form_label(form.email) }}
                              {{ form_errors(form.email) }} <br>
                              {{ form_widget(form.email,{'attr': {'class': 'col-md-12'}})}} <br>
                          </div>

                           <div class="col-md-12">
                              {{ form_label(form.mensaje,'Mensaje') }}
                              {{ form_errors(form.mensaje) }} <br>
                              {{ form_widget(form.mensaje,{ 'attr': {'class': 'col-md-12'}}) }}
                              <br><br><br>
                          </div>

                            {{ form_widget(form.enviar,{ 'attr': {'class': 'btn btn-success' , 'style':'margin-left:auto;'}} )}}
                    </div>


                      {{ form_end(form) }}
            </div>
        </div>
      </div>
      <br>
  </div>
{% endblock %}
